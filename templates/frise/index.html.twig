{% extends 'base.html.twig' %}

{% block title %}Accueil {{parent()}} {% endblock %}

{% block body %}
    <div class="bloc-scroll">
            <!-- Event 1: Guerre de Corée -->
                                {# {{ dump( even ) }} #}
            {% for even in evens %}
                {% for persoEven in even.eventP %}  
                <a href=" {{ path('app_history_even_show',{ id: even.evenHistorique.id }) }} ">
                    <article class="card-event-nofocus ">
                        <section class="historic-event">
                            <div class="img-histo">
                                <img src="{{ asset('assets/icones/') }}/1950-historic-event-small.png" alt="guerre-corée">
                            </div>
                            <div class="tag">
                                <div class="title">
                                    <p class="event-title-1">{{ even.evenHistorique.title }}</p>
                                </div>
                            </div>
                        </section>
                </a>

                        <img src="assets/icones/ligne-dates.svg" class="ligne-dots" alt="ligne">

                        <section class="date">
                            <p>
                                <span class="century">{{ even.date | slice(0,2) }}</span>
                                <span class="decade">{{ even.date | slice(2,4) }}</span>
                            </p>
                        </section>

                        <img src="assets/icones/ligne-dates.svg" class="ligne-dots" alt="ligne">
                        
                    <a href=" {{ path('app_personal_even_show',{ id: persoEven.id }) }} ">
                        <section class="personal-event">
                            <div class="tag">
                                <div class="title">
                                    <p>{{ persoEven.title }}</p>
                                </div>
                            </div>
                            <div class="personal-picture">
                                <img src="" alt="pas-de-photo">
                                <div>
                                    <p>VIDE</p>
                                </div>
                            </div>
                        </section>
                    </a>
                    </article>
                {% endfor %}
            {% endfor %}
    </div>
{% endblock  body %}
